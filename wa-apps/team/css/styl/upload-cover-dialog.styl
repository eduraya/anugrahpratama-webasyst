.upload-cover
    &__badge
        display: inline-flex;
        justify-content: center;
        align-items: center;

        vertical-align: baseline;

        position: static;

        min-width: .5rem;
        height: .8rem;

        color: var(--white);
        font-size: .8rem;

        background-color: var(--blue);
        border-radius: .6rem;
        padding: .2rem .4rem;

        transition: var(--timing-default);
        transition-property: padding;

        &:empty
            position: absolute;
            opacity: 0;
            padding: .2rem 0;
            min-width: 0;

    &__items
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(106px, 1fr));
        grid-gap: 20px;

    &__item
        max-width: 106px;

        &.removed
            animation: fade var(--timing-default) reverse, slide var(--timing-default);

        &-pic
            position: relative;
            overflow: hidden;
            height: 100px;
            border-radius: 4px;
            cursor: move;

            img
                width: 100%;
                height: 100%;
                object-fit: cover;

                &.fadeIn
                    animation: fade var(--timing-slow);

        &-check
            text-align: left;
            margin-top: 12px;

        &-cancel
            position: absolute;
            top: 50% !important;
            left: 50%;
            transform: translate(-50%, -50%);

    &__template
        &-progress
            height: 18px;
            margin-top: 12px;

@keyframes fade
    from
        opacity: 0;
    to
        opacity: 1;

@keyframes slide
    to
        transform: translateY(-20px)
