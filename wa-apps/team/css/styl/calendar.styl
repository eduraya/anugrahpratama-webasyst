    .t-event-block
        display: flex;
        justify-content: center;
        align-items: center;

        overflow hidden
        height $event_h

        color: var(--white);
        font-size: 0.875em;
        font-weight: normal;
        font-style: normal;
        line-height: 1em;
        white-space nowrap
        text-overflow ellipsis

        background: var(--red);
        border-radius: 1em;
        padding 0 .5em

        .t-column:last-child .square-corner &
            border-top-right-radius 0
            border-bottom-right-radius 0

        .t-column:first-child .square-corner &
            border-top-left-radius 0
            border-bottom-left-radius 0

        &.js-view-event
            cursor pointer

        &.transparent
            background transparent
            border-color transparent
            color var(--text-color-stronger)

            &:hover
                background var(--background-color-table-row-hover)
                border-color rgba(0,0,0,.02)

        .t-day-count
            padding 0 6px 0 4px
            color var(--dark-gray)

        .t-start
            display: inline-block;
            margin: 0 4px 0 0;

        & > span
            text-overflow: ellipsis
            white-space: nowrap
            overflow: hidden
